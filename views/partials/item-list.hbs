{{#if topMealSection }}
    {{#each mealPackages}}
        {{#if topPackage}}
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="item-box">
                    <div class="item-img-box">
                        <img class="item-img" src="./img/{{image}}" alt={{name}}>
                    </div>
                    <div class="item-text-box">
                        <p class="item-name">{{name}}</p>
                        <p class="item-price">{{price}}</p>
                    </div>
                </div>
            </div>
        {{/if}}
    {{/each}}
{{else}}

