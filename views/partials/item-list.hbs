{{#if topMealSection }}
    {{#each data.mealPackage}}
        {{#if topPackage}}
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="item-box">
                    <div class="item-img-box">
                        <img class="item-img" src={{img}} alt={{name}}>
                    </div>
                    <div class="item-text-box">
                        <p class="item-name">{{name}}</p>
                        <p class="item-price">{{price}}</p>
                    </div>
                </div>
            </div>
        {{/if}}
    {{/each}}
{{else}}
{{#each data.mealPackage}}
    <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="item-box">
            <div class="item-img-box">
                <img class="item-img" src={{img}} alt={{name}}>
            </div>
            <div class="item-text-box">
                <p class="item-name">{{name}}</p>
                <p class="item-price">{{price}}</p>
            </div>
        </div>
    </div>
{{/each}}
{{/if}}
